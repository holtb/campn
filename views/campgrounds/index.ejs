<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to CampN</h1>  
            <p>View our amazing campgrounds with even better views.</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a New Campground</a>
            </p>
        </div>
    </header>
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds:</h3>
        </div>
    </div>
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach((camp)=>{ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%=camp.image%>" alt="<%=camp.name%> Picture">
                    <div class="caption"><h4><%=camp.name%></h4></div>
                    <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">More Info</a>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<%- include("../partials/footer") %>